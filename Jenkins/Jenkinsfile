pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                   if ! command -v npm &> /dev/null; then
                        sudo yum install nodejs nodejs-devel -y
                    fi
                   
                   cd learn-jenkins-app
                   ls -alh
                   node --version
                   npm --version
                   npm install
                   npm run build
                   ls -lah
                '''
            }
        }
        stage('Test') {
            steps {
              sh '''
                cd learn-jenkins-app
                npm test
              '''
            }
        }
    }
}

